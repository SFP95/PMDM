<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#705773"
    tools:context=".SecundaryActivity">

    <TextView
        android:id="@+id/textoEscoge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escoge tu pelicula favorita"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="302dp"
        android:layout_height="228dp"
        app:layout_constraintBottom_toTopOf="@+id/gBottom"
        app:layout_constraintEnd_toStartOf="@+id/gDer"
        app:layout_constraintStart_toStartOf="@+id/gIzq"
        app:layout_constraintTop_toTopOf="@+id/gTop">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5d"
            android:marqueeRepeatLimit="15"
            android:text="2001: La odisea del espacio"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5d"
            android:marqueeRepeatLimit="15"
            android:text="El SeÃ±or de los Anillos"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5d"
            android:marqueeRepeatLimit="15"
            android:text="La lista de Schindler"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5d"
            android:marqueeRepeatLimit="15"
            android:text="Forrest Gump"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btnAlabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alabar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gBottom"
        app:layout_constraintVertical_bias="0.379" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="52dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="354dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="221dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="451dp" />

</androidx.constraintlayout.widget.ConstraintLayout>